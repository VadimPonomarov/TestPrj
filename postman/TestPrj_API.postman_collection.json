            "exec": [
              "pm.test(\"status 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Content-Type looks like CSV\", function () {",
              "  const ct = pm.response.headers.get(\"Content-Type\") || \"\";",
              "  pm.expect(ct.toLowerCase()).to.include(\"text/csv\");",
              "});"
            ]
          }
        }
